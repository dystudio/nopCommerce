@model Nop.Plugin.Widgets.PriceForSize.Domain.Product_PriceForSize
@{
    Layout = "";
}
@using Nop.Web.Framework
@using Nop.Web.Framework.UI

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "priceForSizeAdminForm" }))
{ 
  @Html.HiddenFor(model => model.ProductId)
  <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.HasPriceForSize)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.HasPriceForSize)
                        @Html.ValidationMessageFor(model => model.HasPriceForSize)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.MinimumBillablePerimeter)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.MinimumBillablePerimeter)
                        @Html.ValidationMessageFor(model => model.MinimumBillablePerimeter)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.MinimumBillableArea)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.MinimumBillableArea)
                        @Html.ValidationMessageFor(model => model.MinimumBillableArea)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.MinimumBillableVolume)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.MinimumBillableVolume)
                        @Html.ValidationMessageFor(model => model.MinimumBillableVolume)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.StandardPriceType)
                    </div>
                    <div class="col-md-4">
                        @Html.EnumDropDownListFor(model => model.StandardPriceType, "None")
                        @Html.ValidationMessageFor(model => model.StandardPriceType)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MeasureDimensionId)
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MeasureDimensionId, ViewData["measureDimension"] as SelectList)
                        @Html.ValidationMessageFor(model => model.MeasureDimensionId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.WidthAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.WidthAttributeId, ViewData["attributes"] as SelectList, "--Unmanaged--")
                        @Html.ValidationMessageFor(model => model.WidthAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MinimumWidthManageable)
                    </div>
                    <div class="col-md-2">
                       @Html.NopEditorFor(model => model.MinimumWidthManageable)
                       @Html.ValidationMessageFor(model => model.MinimumWidthManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MaximumWidthManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopEditorFor(model => model.MaximumWidthManageable)
                        @Html.ValidationMessageFor(model => model.MaximumWidthManageable)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.HeightAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.HeightAttributeId, ViewData["attributes"] as SelectList, "--Unmanaged--")
                        @Html.ValidationMessageFor(model => model.HeightAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MinimumHeightManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopEditorFor(model => model.MinimumHeightManageable)
                        @Html.ValidationMessageFor(model => model.MinimumHeightManageable)
                    </div>
                    <div class="col-md-2">
                       @Html.NopLabelFor(model => model.MaximumHeightManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopEditorFor(model => model.MaximumHeightManageable)
                        @Html.ValidationMessageFor(model => model.MaximumHeightManageable)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.DepthAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(model => model.DepthAttributeId, ViewData["attributes"] as SelectList, "--Unmanaged--")
                        @Html.ValidationMessageFor(model => model.DepthAttributeId)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MinimumDepthManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopEditorFor(model => model.MinimumDepthManageable)
                        @Html.ValidationMessageFor(model => model.MinimumDepthManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopLabelFor(model => model.MaximumDepthManageable)
                    </div>
                    <div class="col-md-2">
                        @Html.NopEditorFor(model => model.MaximumDepthManageable)
                        @Html.ValidationMessageFor(model => model.MaximumDepthManageable)
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-3">
                        <input id="priceForSizeAdminFormSave" type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                    <div class="col-md-9 saveResult">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
  <script>
    $().ready(function () {
      jQuery('#priceForSizeAdminForm').validate().currentForm = '';

      $('#priceForSizeAdminFormSave').click(function (ev) {
        $form = $('#priceForSizeAdminForm');
        $.ajax({
          cache: false,
          type: "POST",
          url: $form.attr('action'),
          data: $form.serialize(),
          datatype: "html",
          success: function (data) {
            $('#priceForSizeAdminForm .saveResult').html(data);
          },
          error: function (a, b, c) {
            alert(c);
          }
        });
      });
    });
  </script>

<div style="border:1px solid">
  @Html.Action("AdminProductAttributeValues", new { id = Model.ProductId })
</div>